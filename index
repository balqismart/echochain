        // --- STATE MANAGEMENT ---
        let currentScreen = 'splash';
        let currentLevel = 0;
        let currentCardIndex = 0;
        let draggedEl = null;
        let currentTouchEl = null;

        // --- NAVIGASI DAN SCREEN MANAGER ---
        function showScreen(screenId) {
            ['page-splash', 'page-menu', 'page-materi', 'page-quiz-selection', 'page-drag-drop', 'page-card-quiz'].forEach(id => {
                const el = document.getElementById(id);
                if (el) el.classList.add('hidden');
            });
            
            const targetEl = document.getElementById(screenId);
            if (targetEl) targetEl.classList.remove('hidden');
            
            const backBtn = document.getElementById('back-btn');
            if (screenId === 'page-splash') {
                backBtn.classList.add('hidden');
            } else {
                backBtn.classList.remove('hidden');
            }
            currentScreen = screenId;
        }

        function goHome() {
            if (currentScreen === 'page-menu') {
                showScreen('page-splash');
            } else if (['page-materi', 'page-quiz-selection'].includes(currentScreen)) {
                showScreen('page-menu');
            } else if (['page-drag-drop', 'page-card-quiz'].includes(currentScreen)) {
                showScreen('page-quiz-selection');
            } else {
                showScreen('page-menu');
            }
        }

        function goToMenu() { showScreen('page-menu'); }
        function goToMateri() { showScreen('page-materi'); }
        function goToQuizSelection() { showScreen('page-quiz-selection'); }

        // --- LOGIC DETAIL MATERI (MODAL) ---
        function showMaterialDetail(key) {
            const data = materialContents[key];
            const modal = document.getElementById('material-detail-modal');
            const contentWrapper = document.getElementById('material-content-wrapper');
            
            // Set konten modal
            contentWrapper.innerHTML = data.content;
            
            // Tampilkan modal
            modal.classList.remove('hidden');
        }

        function hideMaterialDetail() {
            document.getElementById('material-detail-modal').classList.add('hidden');
        }


        // --- LOGIC KUIS DRAG & DROP ---
        function startDragDrop() {
            currentLevel = 0;
            loadDragDropLevel(0);
            showScreen('page-drag-drop');
        }

        function loadDragDropLevel(index) {
            const levelData = dndLevels[index];
            document.getElementById('dd-level-title').innerText = levelData.title;
            document.getElementById('dd-progress').innerText = `${index + 1}/${dndLevels.length}`;

            // Reset Drop Zones
            const dropZones = document.querySelectorAll('#page-drag-drop .drop-zone');
            dropZones.forEach(zone => {
                const draggable = zone.querySelector('.draggable-item');
                if (draggable) draggable.remove();
                zone.classList.remove('correct-drop', 'wrong-drop');
                zone.parentElement.classList.remove('bg-green-100', 'bg-red-100', 'p-2', 'rounded-xl');
            });

            // Populate Source Container (Diacak)
            const sourceContainer = document.getElementById('dd-source-container');
            sourceContainer.innerHTML = '';
            
            const shuffledItems = [...levelData.items].sort(() => Math.random() - 0.5);

            shuffledItems.forEach((item, i) => {
                const el = document.createElement('div');
                el.className = 'draggable-item bg-white border border-gray-200 shadow-md px-4 py-2 rounded-lg flex items-center gap-2 text-base md:text-lg';
                el.draggable = true;
                el.dataset.role = item.role;
                el.id = `item-${index}-${i}`; // ID unik
                el.innerHTML = `<span class="text-2xl">${item.icon}</span> <span class="font-bold text-gray-700">${item.name}</span>`;
                
                el.addEventListener('dragstart', handleDragStart);
                // Tambahkan event touch untuk mobile
                el.addEventListener('touchstart', handleTouchStart, { passive: true });
                el.addEventListener('touchmove', handleTouchMove, { passive: false });
                el.addEventListener('touchend', handleTouchEnd);
                
                sourceContainer.appendChild(el);
            });

            // Tambahkan event mouse ke drop zones
            dropZones.forEach(zone => {
                zone.addEventListener('dragover', handleDragOver);
                zone.addEventListener('dragleave', handleDragLeave);
                zone.addEventListener('drop', handleDrop);
            });
        }

        // --- DRAG & DROP EVENT HANDLERS (MOUSE) ---
        function handleDragStart(e) {
            draggedEl = this;
            e.dataTransfer.setData('text/plain', this.id);
            setTimeout(() => this.classList.add('hidden'), 0);
        }

        function handleDragOver(e) {
            e.preventDefault();
            if (this.classList.contains('drop-zone')) {
                this.classList.add('drag-over');
            }
        }

        function handleDragLeave(e) {
            this.classList.remove('drag-over');
        }

        function handleDrop(e) {
            e.preventDefault();
            this.classList.remove('drag-over');
            
            const existingItem = this.querySelector('.draggable-item');
            if (existingItem) {
                document.getElementById('dd-source-container').appendChild(existingItem);
            }

            const id = e.dataTransfer.getData('text/plain');
            draggedEl = document.getElementById(id);

            if (draggedEl) {
                draggedEl.classList.remove('hidden');
                this.appendChild(draggedEl);
            }
            draggedEl = null;
        }

        // --- DRAG & DROP EVENT HANDLERS (TOUCH - Simple Fallback) ---
        let initialX, initialY;

        function handleTouchStart(e) {
            e.stopPropagation();
            currentTouchEl = this;
            currentTouchEl.style.position = 'absolute';
            currentTouchEl.style.zIndex = '1000';
            
            initialX = e.touches[0].clientX;
            initialY = e.touches[0].clientY;
        }

        function handleTouchMove(e) {
            e.preventDefault();
            if (!currentTouchEl) return;
            
            const touch = e.touches[0];
            const dx = touch.clientX - initialX;
            const dy = touch.clientY - initialY;
            
            currentTouchEl.style.transform = `translate(${dx}px, ${dy}px) scale(1.1)`;

            const targetElement = document.elementFromPoint(touch.clientX, touch.clientY);
            document.querySelectorAll('.drop-zone').forEach(zone => zone.classList.remove('drag-over'));
            
            if (targetElement && targetElement.closest('.drop-zone')) {
                targetElement.closest('.drop-zone').classList.add('drag-over');
            }
        }

        function handleTouchEnd(e) {
            if (!currentTouchEl) return;
            
            const touch = e.changedTouches[0];
            const targetElement = document.elementFromPoint(touch.clientX, touch.clientY);
            const dropZone = targetElement ? targetElement.closest('.drop-zone') : null;

            currentTouchEl.style.position = 'static';
            currentTouchEl.style.zIndex = 'auto';
            currentTouchEl.style.transform = 'none';
            
            document.querySelectorAll('.drop-zone').forEach(zone => zone.classList.remove('drag-over'));

            if (dropZone) {
                const existingItem = dropZone.querySelector('.draggable-item');
                if (existingItem) {
                    document.getElementById('dd-source-container').appendChild(existingItem);
                }
                dropZone.appendChild(currentTouchEl);
            } else {
                document.getElementById('dd-source-container').appendChild(currentTouchEl);
            }
            
            currentTouchEl = null;
        }
        // --- END DRAG & DROP EVENT HANDLERS (TOUCH) ---


        function checkDragDrop() {
            const dropZones = document.querySelectorAll('#page-drag-drop .drop-zone');
            let correctCount = 0;
            let totalFilled = 0;

            dropZones.forEach(zone => {
                const item = zone.querySelector('.draggable-item');
                
                zone.classList.remove('correct-drop', 'wrong-drop');
                zone.parentElement.classList.remove('bg-green-100', 'bg-red-100', 'p-2', 'rounded-xl');

                if (item) {
                    totalFilled++;
                    if (item.dataset.role === zone.dataset.role) {
                        correctCount++;
                        zone.classList.add('correct-drop');
                        zone.parentElement.classList.add('bg-green-100', 'p-2', 'rounded-xl');
                    } else {
                        zone.classList.add('wrong-drop');
                        zone.parentElement.classList.add('bg-red-100', 'p-2', 'rounded-xl');
                    }
                }
            });

            if (totalFilled < 5) {
                alert("Lengkapi semua kotak (5 Organisme) dulu ya! ğŸ˜Š");
                return;
            }

            if (correctCount === 5) {
                const modal = document.getElementById('modal-result');
                const content = document.getElementById('modal-content');
                const nextBtn = document.getElementById('modal-next-btn');

                content.innerHTML = `
                    <h4 class="font-bold text-lg text-emerald-800 mb-2">Refleksi Level ${currentLevel + 1} (${dndLevels[currentLevel].title}):</h4>
                    <p>${dndLevels[currentLevel].reflection}</p>
                `;
                
                if (currentLevel < dndLevels.length - 1) {
                    nextBtn.textContent = `Lanjut Level ${currentLevel + 2} ğŸš€`;
                } else {
                    nextBtn.textContent = 'Selesai! Kembali ke Menu Utama ğŸ‰';
                }

                modal.classList.remove('hidden');
            } else {
                alert(`Masih ada yang kurang tepat. Perhatikan kotak yang berwarna merah, lalu coba pindahkan! (${correctCount}/5 Benar)`);
            }
        }

        function nextLevelOrFinish() {
            document.getElementById('modal-result').classList.add('hidden');
            if (currentLevel < dndLevels.length - 1) {
                currentLevel++;
                loadDragDropLevel(currentLevel);
            } else {
                alert("SELAMAT! Kamu telah menyelesaikan semua level Ekosistem! ğŸ‰");
                goToQuizSelection();
            }
        }


        // --- LOGIC KUIS KARTU ---
        function startCardQuiz() {
            currentCardIndex = 0;
            loadCard(0);
            showScreen('page-card-quiz');
        }

        function loadCard(index) {
            const data = cardQuestions[index];
            const card = document.getElementById('the-card');
            
            card.classList.remove('flipped');

            setTimeout(() => {
                document.getElementById('card-icon').innerText = data.icon;
                document.getElementById('card-title').innerText = data.title;
                document.getElementById('card-question').innerText = data.question;
                document.getElementById('card-answer').innerText = data.answer;
                document.getElementById('card-progress').innerText = `${index + 1}/${cardQuestions.length}`;
            }, 200);
        }

        function flipTheCard() {
            document.getElementById('the-card').classList.toggle('flipped');
        }

        function nextCard() {
            if (currentCardIndex < cardQuestions.length - 1) {
                currentCardIndex++;
                loadCard(currentCardIndex);
            } else {
                if(confirm("Hebat! Kamu sudah menyelesaikan semua kartu. Ulangi lagi?")) {
                    currentCardIndex = 0;
                    loadCard(currentCardIndex);
                } else {
                    goToQuizSelection();
                }
            }
        }

        // --- INISIALISASI ---
        document.addEventListener('DOMContentLoaded', () => {
            // Inisialisasi awal ke halaman splash
            showScreen('page-splash');
        });
    </script>
</body>
</html>
