            { icon: "ğŸ¦", title: "Udang", question: "Makan plankton. Konsumen jenis apa?", answer: "Konsumen Tingkat I" },
            { icon: "ğŸ¬", title: "Lumba-lumba", question: "Mamalia cerdas pemakan ikan. Tingkat berapa?", answer: "Konsumen Tingkat III" },
