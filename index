        // Data Kuis Kartu (10 Soal)
        const cardQuestions = [
            { icon: "ğŸ¦ˆ", title: "Hiu", question: "Predator puncak laut. Apa makanannya?", answer: "Ikan Besar & Anjing Laut" },
